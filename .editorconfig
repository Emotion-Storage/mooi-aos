# Root file for EditorConfig
root = true

# ==============================================================================
# Global Settings
# ==============================================================================

[*]
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4
charset = utf-8
trim_trailing_whitespace = true
max_line_length = 120
tab_width = 4


# ==============================================================================
# Kotlin Specific Settings
# ==============================================================================

[*.kt]
ktlint_code_style = ktlint_official
ktlint_ignore_back_ticked_identifier = true
ktlint_standard = enabled
ktlint_experimental = enabled
ktlint_code-style = ktlint_official
ktlint_standard_import-ordering = disabled
ktlint_standard_no-wildcard-imports = disabledr
ktlint_standard_backing-property-naming = disabled
ktlint_standard_package-name = disabled
ktlint_function_naming_ignore_when_annotated_with = Composable
ktlint_standard_annotation = disabled

# ==============================================================================
# XML Specific Settings (Android Layouts)
# ==============================================================================

[*.xml]
android_xml_indent_size = 2


# ==============================================================================
# Gradle Build Scripts (Kotlin DSL)
# ==============================================================================

[*.gradle.kts]
ktlint_standard_indent = 4

# ==============================================================================
# Properties Files (e.g., gradle.properties)
# ==============================================================================

[*.properties]